<h2><%= @movie.title %></h2>

<iframe src='<%= @movie.trailer %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
<p><%= @movie.description %>

<h2> Comments </h2>

<%= link_to 'Add Comment', new_movie_comment_path(@movie) %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= link_to 'Edit', edit_movie_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>