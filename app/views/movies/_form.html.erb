<h1><%= @movie.id ? 'Edit movie' : 'Create Movie' %></h1>
<hr />

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>
  <br />
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre%>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description%>
  <br />
  <%= f.label :trailer %>
  <%= f.text_field :trailer%>
  <br />
  <%= f.submit class: "ui basic button"%>
<% end %>

 